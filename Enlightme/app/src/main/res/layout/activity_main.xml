<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_above="@id/searchE"
        android:layout_marginBottom="-23dp"
        android:text="Write here Your Book name " />

    <EditText
        android:id="@+id/searchE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="Type uour book name"
        android:inputType="text" />

    <Button
        android:id="@+id/searchb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchE"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="7dp"
        android:text="Search" />

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchb"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/url"
>
        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your results will appear here"
            android:textSize="18sp" />
    </ScrollView>

    <TextView
        android:id="@+id/logged"
        android:layout_width="201dp"
        android:layout_height="60dp"
        android:layout_above="@+id/logout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/search"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="272dp"
        android:layout_marginLeft="272dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="193dp"
        android:text="Log Out" />

</RelativeLayout>

